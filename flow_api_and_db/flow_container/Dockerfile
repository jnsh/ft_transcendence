FROM python:3.11.4-slim-buster

WORKDIR /code

COPY ./requirements.txt /code/requirements.txt

RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt

COPY ./flow /code/flow

EXPOSE 8000

WORKDIR /code/flow

COPY ./entry.sh .

RUN chmod +x entry.sh

RUN apt-get update && apt-get install -y netcat

CMD ["sh", "entry.sh"]